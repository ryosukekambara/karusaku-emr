{
  "name": "karusaku-emr",
  "version": "2.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "test": "jest",
    "lint": "eslint .",
    "migrate": "node database/migrate.js",
    "backup": "node scripts/backup.js",
    "deploy": "npm run build && npm start",
    "deploy-light": "chmod +x scripts/deploy-light.sh && ./scripts/deploy-light.sh",
    "build-light": "docker build -f Dockerfile.light -t karusaku-emr:light .",
    "start-light": "docker-compose -f docker-compose.production.yml up -d",
    "cost-analysis": "echo '💰 月額コスト: ¥1,700以下' && echo '💵 利益率: 70%以上'",
    "test-setup": "npm run install-client && npm run build && echo '✅ テスト環境準備完了'",
    "test-start": "npm start",
    "test-backup": "cp medical_records.db medical_records_backup_$(date +%Y%m%d_%H%M%S).db",
    "test-restore": "echo '最新のバックアップファイルを復元します' && ls -la medical_records_backup_*.db | tail -1 | awk '{print $9}' | xargs -I {} cp {} medical_records.db"
  },
  "keywords": [
    "electronic",
    "medical",
    "records",
    "emr",
    "healthcare",
    "saas",
    "low-cost"
  ],
  "author": "Karusaku Team",
  "license": "MIT",
  "description": "カルサク - 医療機関向け電子カルテシステム (超低コストSaaS対応)",
  "dependencies": {
    "archiver": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "googleapis": "^157.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
