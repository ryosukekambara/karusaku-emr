# サーバー設定
PORT=3001
NODE_ENV=production

# データベース設定
DATABASE_URL=postgresql://username:password@localhost:5432/karusaku_emr
# 開発用SQLite
SQLITE_PATH=./medical_records.db

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# セキュリティ設定
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://your-domain.com

# ファイルアップロード設定
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# メール設定（通知機能用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 監視・ログ設定
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# レート制限設定
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# バックアップ設定
BACKUP_INTERVAL=24h
BACKUP_PATH=./backups

# ワークフロー設定（n8n代替）
GMAIL_WEBHOOK_ENABLED=false
GMAIL_WEBHOOK_URL=
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

SLACK_WEBHOOK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

NOTION_WEBHOOK_ENABLED=false
NOTION_API_KEY=
NOTION_DATABASE_ID=


